#!/usr/bin/env bash
# Pre-commit hook for Stream Mount API
# Automatically regenerates protobuf code when .proto files change

set -e

# Colors for output
readonly RED='\033[0;31m'
readonly GREEN='\033[0;32m'
readonly YELLOW='\033[1;33m'
readonly NC='\033[0m' # No Color

echo -e "${YELLOW}Pre-commit: Checking for proto file changes...${NC}"

# Check if any proto files are being committed
readonly PROTO_CHANGED=$(git diff --staged --name-only | grep -E '\.proto$' || true)

if [ -z "$PROTO_CHANGED" ]; then
    echo -e "${GREEN}No proto files changed, skipping generation${NC}"
    exit 0
fi

echo -e "${YELLOW}Proto files changed:${NC}"
echo "$PROTO_CHANGED"

# Generate code
echo -e "${YELLOW}Regenerating code...${NC}"
if command -v make &> /dev/null; then
    if ! make generate; then
        echo -e "${RED}ERROR: Code generation failed!${NC}"
        echo -e "${RED}Please fix the errors and try again.${NC}"
        exit 1
    fi
else
    if ! ./scripts/generate.sh; then
        echo -e "${RED}ERROR: Code generation failed!${NC}"
        echo -e "${RED}Please fix the errors and try again.${NC}"
        exit 1
    fi
fi

# Add generated files to the commit
echo -e "${YELLOW}Adding generated files to commit...${NC}"
git add gen/go gen/elixir

echo -e "${GREEN}âœ“ Code generation complete and added to commit${NC}"
exit 0
